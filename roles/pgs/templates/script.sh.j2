#!/bin/bash
set -ex
. {{ pgs_dir }}/venv/bin/activate;
# Temporarily set umask usch that www-data can read our files.
umask 0003

# Move into a temp dir
cd $(mktemp -d)
# Fetch an updated list of URLs
make -f {{ pgs_repo_dir }}/Makefile
# Contact all servers
python {{ pgs_repo_dir }}/process.py --json_dir {{ web_dir }} {{ pgs_repo_dir }}/servers.csv
# Send to influxdb
python {{ pgs_repo_dir }}/send-to-influx.py --influx_db galaxy --influx_ssl --influx_host {{ influxdb.host }} --influx_user {{ influxdb.galaxy.username }} --influx_pass {{ influxdb.galaxy.password }} --json_dir {{ web_dir }}
# Build badges
python {{ pgs_repo_dir }}/badges.py {{ web_dir }} {{ web_dir }}/badges/
