[uwsgi]
env = SENTRY_CONF={{ sentry_conf_dir }}/sentry.conf.py
module = sentry.wsgi

; spawn the master and 4 processes with 8 threads each
socket = {{ sentry_sock_dir }}/sentry.sock
chmod-socket = 775
chown-socket = sentry:nginx
master = true
processes = 4
threads = 8

; allow longer headers for raven.js if applicable
; default: 4096
buffer-size = 32768

; allow large file uploads
limit-post = 5242880

; various other explicit defaults
post-buffering = 65536
thunder-lock = true
disable-logging = true
enable-threads = true
single-interpreter = true
lazy-apps = true
log-x-forwarded-for = true
