---
extends: default

ignore: |
  roles
  collections
  one-off
  secret_group_vars
  templates
  files/galaxy/dynamic_rules/usegalaxy
  /files/galaxy-test/dynamic_rules/usegalaxy/

rules:
  line-length:
    max: 120
    level: warning
  comments-indentation: disable  # don't bother me with this rule
  comments:
    require-starting-space: false
    min-spaces-from-content: 1
